<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity">

    <android.support.v7.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Handler"
            android:textColor="#ffffff"
            android:background="@color/colorAccent"
            android:layout_margin="10dp"
            android:id="@+id/handler"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0"/>
    />
    <Button
            android:text="进程通信AIDL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/progressInfo"
            android:textColor="#ffffff"
            android:background="@color/colorAccent"
            app:layout_constraintTop_toBottomOf="@+id/handler"
            app:layout_constraintEnd_toEndOf="@+id/handler"
            android:layout_marginTop="8dp"/>
    <Button
            android:text="数据结构"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/dataStructure"
            android:textColor="#ffffff"
            android:background="@color/colorAccent"
            app:layout_constraintTop_toBottomOf="@+id/progressInfo"
            app:layout_constraintEnd_toEndOf="@+id/progressInfo"
            android:layout_marginTop="8dp"/>
    <Button
            android:text="事件传递"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/event"
            android:textColor="#ffffff"
            android:background="@color/colorAccent"
            app:layout_constraintTop_toBottomOf="@+id/dataStructure"
            app:layout_constraintEnd_toEndOf="@+id/dataStructure"
            android:layout_marginTop="8dp"/>

    <Button
            android:text="自定义"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/custom"
            android:textColor="#ffffff"
            android:background="@color/colorAccent"
            app:layout_constraintTop_toBottomOf="@+id/event"
            app:layout_constraintEnd_toEndOf="@+id/event"
            android:layout_marginTop="8dp"/>

</android.support.constraint.ConstraintLayout>